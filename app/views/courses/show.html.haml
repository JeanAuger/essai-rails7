/course/show
.text-white
  .fa.fa-bookmark
  = link_to @course.category, category_path(@course.category)
  >
  .fa.fa-graduation-cap
  = @course.name

.row
  .col-lg-8.order-1.order-lg-0
    .jumbotron
      %h3
        .fa.fa-graduation-cap
        %b= @course.name
      %p
      %small= simple_format(@course.short_description)
      %p
      .row
      .fa.fa-user
      = @course.reviews_count
      students
      .row
      .fa.fa-star
      = @course.average_rating
      .row
      .fa.fa-chalkboard-teacher
      Lecturer:
      = @course.user
      .row
      .fa.fa-clock
      Last updated
      = @course.updated_at.strftime('%m/%Y')
      .row
      .fa.fa-comment
      = @course.language
      .row
      .fa.fa-clock
      %b Duration:
      = @course.duration 
      min
      .row
      %b Description:
      %small= simple_format(@course.description)

    .text-white
      %h4
        .fa.fa-book
        = pluralize(@course.lessons_count, 'lesson')
    - @lessons.each do |lesson|
      = render 'lessons/lesson_preview', lesson: lesson

    %p
    .text-white
      %h4
        .fa.fa-comment
        = pluralize(@course.reviews.count, 'review')
    - @reviews.each do |review|
      = render 'reviews/review', review: review
      %p

  .col-lg-4.order-0.order-lg-1
    .sticky-top
      = render 'courses/course', course: @course
    %p
