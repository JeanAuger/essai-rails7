%h1 Listing tasks

%table
  %thead
    %tr
      %th Course
      %th Chapter
      %th Name
      %th Description
      %th Video url
      %th
      %th
      %th

  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.course
        %td= task.chapter
        %td= task.name
        %td= task.description
        %td= task.video_url
        %td= link_to 'Show', task
        %td= link_to 'Edit', edit_task_path(task)
        %td= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Task', new_task_path
