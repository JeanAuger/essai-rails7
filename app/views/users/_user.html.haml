.card
  .card-header
    .fa.fa-user
    = link_to user.username, user_path(user)
    - if user == current_user
      .float-right
        = link_to edit_user_registration_path, class: "btn btn-sm btn-warning" do
          .fa.fa-cog
          %b Account settings
  .card-footer
    Signed up
    = time_ago_in_words(user.created_at)
    ago
    .row
    - user.roles.each do |role|
      .badge.badge-info
        = role.name
  .card-footer
    %b Subscriptions:
    = user.subscriptions.count
  .card-footer
    %b Courses created:
    = user.courses_count
    
