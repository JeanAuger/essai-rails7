%nav.navbar.navbar-expand-lg.navbar-dark.bg-success
  %a.navbar-brand{:href => "/"}
    .text-light
      %b 
        .fa.fa-graduation-cap
        EDURGE
  %button.navbar-toggler{"aria-controls" => "navbarSupportedContent", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarSupportedContent", "data-toggle" => "collapse", :type => "button"}
    %span.navbar-toggler-icon
  #navbarSupportedContent.collapse.navbar-collapse
    - if current_user
      %ul.navbar-nav.mr-auto
        %li.nav-item
          = link_to categories_path, class: 'nav-link' do
            .fa.fa-bookmark
            %b Categories
        .nav-item.dropdown
          %a#navbarDropdown.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
            .fa.fa-cogs
            %b Admin
          .dropdown-menu{"aria-labelledby" => "navbarDropdown"}
            = link_to published_unapproved_courses_path, class: "dropdown-item" do
              .fa.fa-graduation-cap
              %b Unapproved courses
              .badge.badge-danger
                = Course.published.unapproved.count
            = link_to new_category_path, class: "dropdown-item" do
              .fa.fa-bookmark
              .fa.fa-plus
              %b Add Category

        .nav-item.dropdown
          %a#navbarDropdown.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
            .fa.fa-chalkboard-teacher
            %b Teach
          .dropdown-menu{"aria-labelledby" => "navbarDropdown"}
            = link_to my_courses_path, class: "dropdown-item" do
              .fa.fa-graduation-cap
              %b My courses
              .badge.badge-danger
                = current_user.courses.count
            = link_to new_course_path, class: "dropdown-item" do
              .fa.fa-graduation-cap
              .fa.fa-plus
              %b Add course
        .nav-item.dropdown
          %a#navbarDropdown.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
            .fa.fa-graduation-cap
            %b Learn
          .dropdown-menu{"aria-labelledby" => "navbarDropdown"}
            = link_to user_courses_path, class: "dropdown-item" do
              .fa.fa-graduation-cap
              %b My courses
              .badge.badge-danger
                = current_user.user_courses.count
            = link_to user_courses_path, class: "dropdown-item" do
              .fa.fa-graduation-cap
              %b Pending reviews
              .badge.badge-danger
                = current_user.user_courses.where(rating: 0, comment: nil).count
      %ul.navbar-nav.mr-right
        .nav-item.dropdown
          %a#navbarDropdown.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
            .fa.fa-user
            %b= current_user.username
          .dropdown-menu.dropdown-menu-right{"aria-labelledby" => "navbarDropdown"}
            = link_to edit_user_registration_path, class: "dropdown-item" do
              .fa.fa-cog
              %b Account settings
            = link_to destroy_user_session_path, method: :delete, class: "dropdown-item" do
              .fa.fa-sign-out-alt
              %b Sign out
    - else
      %ul.navbar-nav.mr-auto
      .nav-link= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-outline-dark'
      .nav-link= link_to 'Log In', new_user_session_path, class: 'btn btn-outline-dark'
